<!DOCTYPE html>
<html>
	<head>
		<title>Troca de Livros</title>

		<% include ../snippets/head %>
	</head>
	<body>
		<% include ../snippets/navbar %>

		<div class="ui center aligned raised segments text container" id="top">
			<div class="ui segment">
				<h4><%= profile.email %></h4>
				/profile/<%= profile.link %>
			</div>

			<div class="ui segment">
				<img src="<%= profile.picture %>" class="ui centered circular bordered small image"/>
				<address>
					Contact Info
					<br>
					<%= profile.email %><br>
					<strong><%= profile.city %></strong>
					<% if(profile.toggles.publicInformation) { %>
						<br>
						<strong><%= profile.phone %></strong>
					<% } %>
				</address>

				<p>
					<br>
					Last activity:
					<strong><%= lastseen %></strong>
					<br>
					Member since
					<strong><%= since %></strong>
				</p>
				<% if(profile.description) { %>
					<% if(!profile.toggles.hideDescription) { %>
						<h4 class="ui horizontal divider header">
							<i class="tag icon"></i>
							Description
						</h4>
						<code><%= profile.description %></code>
					<% } %>
				<% } %>
			</div>
			<div class="ui segment">
				<% if(profile.books.length > 0) { %>
					<p><%= profile.books %></p>
				<% } else { %>
					<p>User has no books associated with account.</p>
				<% } %>
			</div>
		</div>

		<% include ../snippets/footer %>
		<% include ../snippets/JS %>
	</body>
</html>
